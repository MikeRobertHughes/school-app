<h2>All <%= teachers.size %> Teachers</h2>

<ul>
  <% teachers.each do |teacher| %>
  <li> Name: <%= link_to( teacher.full_name, teacher_path(teacher)) %> course: <%= teacher.course.name %> </li>
  <% end %>
</ul>

<%= link_to('< Prev Page', teachers_path(page: page - 1)) if page > 0 %>
<%= link_to("More Page >", teachers_path(page: page + 1)) unless teachers.size <= 24 %>
